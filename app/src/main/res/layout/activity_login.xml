<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adega.login"
    android:background="@drawable/imagem2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="75dp">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="126dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/user"
                />
        </LinearLayout>





        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/email_2"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:hint="email"
            android:inputType="text"
            tools:ignore="MissingConstraints"
            android:drawableLeft="@drawable/email_2"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/lock"
            android:ems="10"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:hint="senha"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="130dp">
            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_borda_arredondada"
                android:text="Entrar "
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/registar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#00EF0000"
                android:gravity="center"
                android:text="Registar "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"

                />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adega.registar"
    android:background="@drawable/imagem2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="75dp">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="126dp"
                android:layout_height="95dp"
                app:srcCompat="@drawable/user"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/user_4"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            android:drawableLeft="@drawable/user_4"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/username_1"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:background="@color/white"
            android:ems="10"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/user_5"
            android:inputType="text"
            android:hint="Apelido"

            tools:ignore="MissingConstraints"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/user_5" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/email_2"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:ems="10"
            android:hint="email"
            android:inputType="text"

            tools:ignore="MissingConstraints"
            android:drawableLeft="@drawable/email_2"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/telef"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/phone"
            android:ems="10"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:hint="numero"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/phone" />
        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/lock"
            android:ems="10"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:hint="senha"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/senhaconf"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/lock"
            android:ems="10"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:hint="confirmar senha"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="75dp">
            <Button
                android:id="@+id/guardar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_borda_arredondada"

                android:text="guardar"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>